{
  "expo": {
    "name": "tecnibus",
    "slug": "tecnibus",
    "owner": "diegos31",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/adaptive-icon.png",
    "scheme": "tecnibus",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSFaceIDUsageDescription": "TecniBus necesita acceder a Face ID para autenticación rápida y segura.",
        "NSCameraUsageDescription": "TecniBus necesita acceso a la cámara para tomar fotos de perfil.",
        "NSPhotoLibraryUsageDescription": "TecniBus necesita acceso a tu galería para seleccionar fotos de perfil.",
        "NSLocationWhenInUseUsageDescription": "TecniBus necesita tu ubicación para mostrar la posición del bus en tiempo real a los padres.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "TecniBus necesita tu ubicación en segundo plano para tracking continuo del recorrido.",
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": ["remote-notification", "remote-notification"]
      }
    },
    "android": {
      "package": "com.diego3110.tecnibus",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyAnsPqhRkz1KfYyHxnuPQvdxdfN7L0dFhE"
        }
      },
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "monochromeImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "bundler": "metro",
      "favicon": "./assets/images/adaptive-icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-font",
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#3DA7D7",
          "defaultChannel": "recorrido"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "4132942f-bfce-4c85-82e2-fb5127ae8fea"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/4132942f-bfce-4c85-82e2-fb5127ae8fea"
    }
  }
}
